@page "/main"
@using System.Security.Claims
@attribute [Authorize(Roles = "Administrator,User")]

<div class="hacienda-page">
    <header>
        <h1>Hacienda Vargas</h1>
    </header>
    
    <div class="content">
        <AuthorizeView>
            <Authorized>
                <h3 class="welcome-message">Hello, @context.User.FindFirstValue(ClaimTypes.GivenName)</h3>
            </Authorized>
        </AuthorizeView>
        <img src="c.png" alt="" style="height: 250px;" class="img-circle rounded">
    </div>
</div>

<style>
    .hacienda-page {
        background-color: rgb(255, 255, 255); /* Color arena para dar un toque de la naturaleza */
        font-family: Arial, sans-serif;
        text-align: center;
        padding: 20px;
    }
    h3{
        color: white;
    }
    header {
        background-color: black;
        color: #FFF;
        padding: 20px;
        border-radius: 10px;
        margin: 20px;
    }

    h1 {
        font-size: 2.5rem;
        font-family: 'Cinzel', serif;
    }

    .content {
        background-color: black;
        padding: 20px;
        border-radius: 10px;
        margin: 20px;
    }

    .welcome-message {
        font-size: 1.5rem;
    }
</style>

