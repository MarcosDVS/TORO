@page "/"

<div class="hacienda-page">
    <header>
        <h1>Hacienda Vargas</h1>
    </header>
    
    <div class="content">
        <AuthorizeView>
            <Authorized>
                <h3 class="welcome-message">Hello, @context.User.Identity.Name!</h3>
            </Authorized>
            <NotAuthorized>
                <h3 class="welcome-message">Hello, Guest!</h3>
            </NotAuthorized>
        </AuthorizeView>
        <img src="toros.png" alt="" style="height: 250px;">
    </div>
</div>

<style>
    .hacienda-page {
        background-color: rgb(17, 17, 17); /* Color arena para dar un toque de la naturaleza */
        font-family: Arial, sans-serif;
        text-align: center;
        padding: 20px;
    }

    header {
        background-color: rgb(0, 0, 24); 
        color: #FFF;
        padding: 20px;
        border-radius: 10px;
        margin: 20px;
    }

    h1 {
        font-size: 2.5rem;
        font-family: 'Cinzel', serif;
    }

    .content {
        background-color: black;
        padding: 20px;
        border-radius: 10px;
        margin: 20px;
    }

    .welcome-message {
        font-size: 1.5rem;
    }
</style>

